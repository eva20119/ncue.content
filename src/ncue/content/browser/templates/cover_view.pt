<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
  metal:use-macro="context/main_template/macros/master" i18n:domain="plone">

<body>
  <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">
      <?python
      from plone import api
      abs_url = api.portal.get().absolute_url()
      ?>
      <div class="container">
        <div class="row">
          <main id="main" class="col-md-12 col-sm-12">
            <a target='_blank'>
              <img src="${abs_url}/resource/index.jpg" style='width: 100%'/>
            </a>
            <div class="section">
              <div id="cover-news-section" class="tabs variation_2 variation_4" data-appear-animation="fadeInDown"
                data-appear-animation-delay="1150">
                <!--tabs navigation-->
                <div class="clearfix">
                  <h3 class="section_title">最新消息</h3>
                </div>
                <!--tabs content-->
                <table class='listing'>
                  <col style="width:80%"/>
                  <col style="width:20%"/>
                  <thead>
                    <tr>
                        <th class="title">標題</th>
                        <th class="date">發佈日期</th>
                    </tr>
                  </thead>
                  <tr tal:repeat="item view/news">
                    <td class="title">
                      <div>
                        <a href="${item/getURL}">${item/Title}</a>
                      </div>
                    </td>
                    <td class="date">${python:item.created.strftime('%Y/%m/%d')}</td>
                  </tr>
                </table>
              </div>
            </div>
          </main>
        </div>
      </div>
<style>

.news-item{
  padding: 10px 0;
}
.post-text h4 {
  font-size: 16px;
}
</style>
    </metal:block>
  </metal:content-core>
</body>

</html>
